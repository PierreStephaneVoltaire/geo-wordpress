# Example terraform.tfvars file
# Copy this to terraform.tfvars and update with your values

# All settings have sensible defaults - you can deploy without any variables!
# Uncomment and modify any values you want to override:

# project_name = "my-wordpress"
# environment = "production"
# instance_type = "t3.micro"
# min_size = 1
# max_size = 3
# desired_capacity = 1
# db_username = "wpuser"

# Optional: Override default values
# project_name = "my-wordpress"
# environment = "production"
# instance_type = "t3.micro"
# min_size = 1
# max_size = 3
# desired_capacity = 1
# db_username = "wpuser"

# Optional: Override regions (defaults to Singapore and Ireland)
# regions = {
#   singapore = "ap-southeast-1"
#   ireland   = "eu-west-1"
# }

# Optional: Override VPC CIDRs
# vpc_cidrs = {
#   singapore = "10.0.0.0/16"
#   ireland   = "10.1.0.0/16"
# }
